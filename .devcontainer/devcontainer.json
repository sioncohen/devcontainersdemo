{
  "name": "Python 3 (Offline)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",

  // DO NOT run installs after create - all dependencies are pre-installed in image
  // "postCreateCommand": "",

  // Keep VS Code extensions running on the HOST (UI) so nothing installs in the container
  "customizations": {
    "vscode": {
      "settings": {
        "remote.extensionKind": {
          "ms-python.python": ["ui"],
          "ms-toolsai.jupyter": ["ui"]
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  // Quality-of-life
  "updateRemoteUserUID": "on",
  "overrideCommand": false
}